
@{
    ViewData["Title"] = "Daftar";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}

@using ProjectSepatu.Models.LoginViewModel

@model LoginViewModelNew

<section>
    <div class="container">
        <div class="form-customers">
            <img src="~/Assets/Front/image/logo/logo-black.png" /><br />
            <h1>Daftar di INSOLE.COM</h1>
            <div class="woocommerce-checkout-info">
                Belum punya akun?
                <a href=""> Daftar disini</a>
            </div>

        </div>


        <div id="customer_details" class="col2-set row">
            <div class="col-1 col-md-6">
                <div class="woocommerce-billing-fields" style="text-align:center">
                    <div class="col-md-12">
                        <div class="col-md-6"></div>
                        <div class="col-md-6" style="text-align:center">
                            <button class="btn btn-social btn-facebook" style="width:200px;">
                                <span class="fa fa-facebook"></span>Sign in with Facebook
                            </button>
                            <br /><br />
                            <button class="btn btn-social btn-google" style="width:200px;">
                                <span class="fa fa-google"></span>Sign in with Google
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2 col-md-6">

                <div class="woocommerce-billing-fields">
                    <h3>Login</h3>
                    <form method="post" asp-controller="Login" asp-action="Login"
                          asp-route-returnurl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div>
                            <label asp-for="Username"></label>
                            <input asp-for="Username" />
                            <span asp-validation-for="Username"></span>
                        </div>

                        <div>
                            <label asp-for="Password"></label>
                            <input asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div>
                            <label asp-for="RememberMe"></label>
                            <input asp-for="RememberMe" />
                            <span asp-validation-for="RememberMe"></span>
                        </div>
                        <input type="submit" value="Login" />
                    </form>

                </div>
            </div>
        </div>


    </div>
</section>

