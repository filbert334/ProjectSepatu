                    </div>
                    <div class="item">
                        <figure><img src="~/Assets/Front/image/product/2.jpg" alt="slide" width="180" height="220" /></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="summary-product entry-summary">
                    <h1 class="product_title">@Model.ProductDetails.Nama_Product</h1>
                    
                    <div class="rate-price">
                        <p class="price"><span>Rp @Model.ProductDetails.Harga_Setelah_Diskon</span></p>
                    </div>
                    <div class="woocommerce-product-rating" style="margin-top:-20px;">
                        <i class="fa fa-eye" aria-hidden="true">&nbsp;@Model.ProductDetails.Dilihat</i></div>
                    <div class="product-single-short-description">
                        <p>@Model.ProductDetails.Remarks</p>
                    </div>
                    <div class="col-md-6">
                        <p class="" style="color:black;text-align:left;font-family:Arial"><strong>Qty: </strong> </p>
                        <div class="quantity">
                            <input id="QuantityField" step="1" min="1" name="quantity" value="1" title="Qty" size="4" type="number" class="input-text qty text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="usr" style="color:black">Catatan: </label>
                            <textarea id="CatatanField" type="text" rows="4" placeholder="Contoh : warna, ukuran" class="form-control" id="usr"></textarea>
                        </div>
                    </div>
                    <br /><br />
                    <button style="background-color:black;color:white" class="btn btn-block" onclick="AddToCart(@Model.ProductDetails.Id)">
                        ADD TO CART&nbsp;&nbsp;<i class="fa fa-cart-plus" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

