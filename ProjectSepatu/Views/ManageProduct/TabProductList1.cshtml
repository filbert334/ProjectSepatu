
@{
    ViewData["Title"] = "TabProductList1";
}
@using ProjectSepatu.Models.ProductViewModels


@model DaftarProdukViewModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Daftar Produk Anda</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th style="width:50px"></th>
                <th style="width:50px"></th>
                <th>Nama Produk</th>
                <th>Harga Jual</th>
                <th>Harga Modal</th>
                <th>Diskon</th>
                <th>Dilihat</th>
                <th>Terjual</th>
            </tr>
        </thead>
        <tbody>
            @try
            {
                @foreach (var item in Model.ProductMasterList)
                {
                    @if (item.IsHidden == false)
                    {
                        <tr class="odd gradeX">
                            <td>
                                <input type="button" name="name" value="Edit" class="btn btn-primary btn-sm" onclick="SearchJenisPembayaran(@item.Id)" />
                            </td>
                            <td>
                                <input type="button" name="name" value="Delete" class="btn btn-danger btn-sm" onclick="DeleteRow(@item.Id)" />
                            </td>

                            <td>@item.Nama_Product</td>
                            <td>@item.Harga_Jual</td>
                            <td>@item.Harga_Modal</td>
                            <td>@item.Diskon_Persen %</td>
                            <td>@item.Dilihat</td>
                            <td>@item.Terjual</td>


                        </tr>
                    }
                }
            }
            catch
            {

            }
        </tbody>
    </table>
</div>



