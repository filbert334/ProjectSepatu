<section>
    <div class="container">
        <form class="cart-form">
            <table>
                <tr>
                    <th>Product</th>
                    <th>&#32;</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>&#32;</th>
                </tr>
                @foreach (var item in Model.ProductsCarts)
                {
                    <tr>
                        
                        <td data-title="Product"><a href="#" class="image-product"><img src="~/Assets/Front/image/product/1.jpg" alt="tab-1" width="180" height="220" /></a></td>
                        <td data-title="Name"><a href="#" class="name-product">@item.ProductList.Nama_Product</a></td>

                        <td data-title="Price"><span class="price">Rp @item.TransList.Harga_Jual_Per_Barang</span></td>
                        <td data-title="Quantity">
                            <span class="quanlity">Quantity:</span>
                            <input type="number" value="@item.TransList.Jumlah_Barang" min="0" />
                        </td>
                        <td data-title="Total"><span class="total">@item.jumlahhargaperbarang</span></td>
                        <td data-title="Remove" onclick="CancelCart(@item.TransList.Id)"><i class="fa fa-times"></i></td>
                    </tr>
                }
            </table>

        </form>
        <div class="row">
            <div class="col-md-6" style="margin-top:-50px;">
                <form class="cart-total">
                    <h4>Cart Totals</h4>
                    <table>
                        <tr>
                            <td>Total</td>
                            <td> <span class="total">Rp @Model.TotalHarga</span></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <form class="cart-form" style="margin-top:-80px;">
            <div class="button-cart">
                <div class="button-cart-left">
                    <a href="" class="update-cart">Update Cart</a>
                </div>
                <div class="button-cart-right"><a href="" class="process">Proceed to Checkout</a></div>
            </div>
        </form>
    </div>

</section>