
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Refund
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Filter
                        <div class="btn-group pull-right">
                            <a href="#">
                                <span class="glyphicon glyphicon-search" onclick=""></span>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <form role="form" id="filterBrandList">
                            <div class="form-group">
                                <label>Tanggal</label>
                                @Html.TextBox("JenisPembayaran", "", new { @class = "form-control datepicker", style = "width:300px" })
                                @*Datepicker belom bisa*@
                            </div>
                            <div class="form-group">
                                <label>Bank</label>
                                @{
                                    var listsortBank = new List<SelectListItem>();
                                    listsortBank.Add(new SelectListItem
                                    {
                                        Value = "A",
                                        Text = "A"
                                    });
                                    listsortBank.Add(new SelectListItem
                                    {
                                        Value = "B",
                                        Text = "B"
                                    });
                                    listsortBank.Add(new SelectListItem
                                    {
                                        Value = "B",
                                        Text = "B"
                                    });
                                    listsortBank.Add(new SelectListItem
                                    {
                                        Value = "C",
                                        Text = "C"
                                    });
                                }
                                @Html.DropDownList("SortBy", listsortBank, new { @class = "form-control", @onchange = "CallChangefunc(this.value)", style = "width:300px" })
                            </div>
                        </form>
                    </div>
                </div>
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:50px"></th>
                            <th style="width:50px"></th>
                            <th style="width:50px"></th>
                            <th>Kode Transaksi</th>
                            <th>Bank</th>
                            <th>Nama</th>
                            <th>Jumlah Transfer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 2; i++)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    <input type="button" name="name" value="Details" class="btn btn-sm" onclick="" />
                                </td>
                                <td>
                                    <input type="button" name="name" value="Transfer" class="btn btn-primary btn-sm" onclick="" />
                                </td>
                                <td>
                                    <input type="button" name="name" value="Cancel" class="btn btn-danger btn-sm" onclick="" />
                                </td>
                                <td>TRX0001</td>
                                <td>BCA</td>
                                <td>Rangga</td>
                                <td>Rp. 1.500.000</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>